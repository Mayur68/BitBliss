<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles.css">
    <title>
        <%= promt %>
    </title>
    <style>
        body {
            background-color: #1d1b34;
            font-family: Arial, sans-serif;
        }

        /* Reset default margin and padding for the entire page */
        body,
        h1,
        h2 {
            margin: 0;
            padding: 0;
        }

        /* Style the header */
        header {
            background-color: #1d1b34;
            color: #fff;
            text-align: center;
            padding: 20px;
            font-size: 36px;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
        }

        /* Style the main content */
        main {
            display: flex;
            justify-content: space-around;
            margin: 20px;
        }


        /* Style section headings */
        h2 {
            font-size: 28px;
            margin-bottom: 20px;
        }

        button {
            background-color: #07a607;
            color: #fff;
            padding: 10px 20px;
            border: none;
            cursor: pointer;
            border-radius: 5px;
            margin-top: 20px;
            font-weight: bold;
        }

        #input {
            display: flex;
            justify-content: space-between;
        }

        input[type="text"] {
            width: 70%;
            /* max-height: 20px; */
            padding: 10px;
            border-style: none;
            border-radius: 5px;
        }

        #filter {
            display: flex;
            flex-direction: column;
            color: white;
            text-align: center;
        }

        #results {
            width: 80%;
            height: 500px;
            border: 1px solid rgb(84, 84, 84);
            border-radius: 20px;
            overflow-y: scroll;
        }

        #results::-webkit-scrollbar {
            display: none;
        }

        .item {
            width: 90%;
            height: 100px;
            margin: 3% 5%;
            border-radius: 10px;
            text-align: center;
            color: white;
            background-color: rgb(67, 67, 255);
            border: 2px solid white;
            cursor: pointer;
        }

        #title {
            margin-left: 45%;
            font-size: 25px;
            color: white;
        }

        @media only screen and (max-width: 768px) {
            main {
                display: flex;
                flex-direction: column;
                justify-content: space-around;
                margin: 20px;
            }

            #filter {
                display: flex;
                flex-direction: row;
                margin-top: 0;
                justify-content: space-between;
                margin-bottom: 20px;
                text-align: center;
            }

            #results {
                width: 98%;
                height: 500px;
                border: 1px solid rgb(84, 84, 84);
                border-radius: 20px;
                overflow-y: scroll;
            }

            #results::-webkit-scrollbar {
                display: none;
            }

            .item {
                width: 90%;
                height: 100px;
                margin: 3% 5%;
                border-radius: 10px;
                text-align: center;
                color: white;
                background-color: rgb(67, 67, 255);
                border: 2px solid white;
                cursor: pointer;
            }

            #title {
                /* margin-left: 30%; */
                text-align: center;
                font-size: 25px;
                color: white;
            }
        }
    </style>
</head>

<body>
    <header>
        <input type="text" class="explore-bar" id="explore" placeholder="explore..." value="<%= promt %>">
        <button onclick="explore()">Explore</button>
    </header>

    <main>
        <section id="filter">
            <label>Filter</label>
            <button onclick="repositories()">Repositories</button>
            <button onclick="users()">Users</button>
        </section>
        <section id="results">
            <label id="title"></label>
            <div id="result"></div>
        </section>
    </main>
</body>

<script>
    function explore() {
        window.location.href = "/Explore/" + document.getElementById('explore').value;
    }

    function users() {
        const resultsSection = document.getElementById("result");
        const title = document.getElementById("title");
        resultsSection.innerHTML = "";
        title.innerText = "Users"
        const prompt = "<%= promt %>";
        const data = {
            user: prompt,
        };

        fetch("/getUsers", {
            method: "POST",
            headers: {
                "Content-Type": "application/json",
            },
            body: JSON.stringify(data),
        })
            .then((response) => response.json())
            .then((data) => {
                console.log(data);
                if (data.status === "success") {
                    displayUsers(data.relatedUsers);
                }
            })
            .catch((error) => {
                console.error("Error loading users", error);
                alert("An error occurred while loading users. Please try again later.");
            });
    }

    function displayUsers(users) {
        const resultsSection = document.getElementById("result");
        const title = document.getElementById("title");
        resultsSection.innerHTML = "";
        title.innerText = "Users"

        if (users.length > 0) {
            users.forEach((user) => {
                const userElement = document.createElement("div");
                userElement.className = "item";
                userElement.onclick = () => openProfile(user);
                userElement.innerHTML = `<p>Username: ${user.username}</p><p>Email: ${user.email}</p>`;
                resultsSection.appendChild(userElement);
            });
        } else {
            resultsSection.innerHTML = "No related users found.";
        }
    }

    function repositories() {
        const resultsSection = document.getElementById("result");
        const title = document.getElementById("title");
        resultsSection.innerHTML = "";
        title.innerText = "repositories"
        const prompt = "<%= promt %>";

        const data = {
            topics: prompt,
        };

        fetch("/loadPublicRepository", {
            method: "POST",
            headers: {
                "Content-Type": "application/json",
            },
            body: JSON.stringify(data),
        })
            .then((response) => response.json())
            .then((data) => {
                console.log(data);
                if (data.status === "success") {
                    displayRepositories(data.repositories);
                }
            })
            .catch((error) => {
                console.error("Error loading repositories", error);
                alert("An error occurred while loading repositories. Please try again later.");
            });

        function displayRepositories(repositories) {
            const resultsSection = document.getElementById("result");
            const title = document.getElementById("title");
            resultsSection.innerHTML = "";
            title.innerText = "Repositories"

            if (repositories.length > 0) {
                repositories.forEach((repo) => {
                    const repoElement = document.createElement("div");
                    repoElement.className = "item";
                    repoElement.onclick = () => openRepository(repo);
                    repoElement.innerHTML = `<p>Repository Name: ${repo.name}</p><p>Created by: ${repo.owner.username}</p>`;
                    resultsSection.appendChild(repoElement);
                });
            } else {
                resultsSection.innerHTML = "No related repositories found.";
            }
        }
    }
    repositories()

    function openRepository(repo) {
        window.location.href = `/${repo.owner.username}/${repo.name}`;
    }

    function openProfile(user) {
        window.location.href = `/${user.username}`;
    }

</script>


</html>