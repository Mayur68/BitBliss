<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="../assets/favicon/favicon.ico" />
    <link rel="stylesheet" href="/frontend/global.css">
    <title>TicTacToe-online</title>
    <style>
        h1 {
            color: white;
            text-align: center;
        }
        h2 {
            color: white;
            text-align: center;
        }
        #retry{
            display: inline-block;
            padding: 10px;
            background-color: #ff9900;
            color: #fff;
            text-decoration: none;
            border-radius: 4px;
            width: 200px;
            font-weight: bold;
            border-style: none;
            margin: auto;
        }
.result{
    margin: auto;
}
        .container {
            display: flex;
            justify-content: space-between;
            margin-top: 4%;
        }

        .gameBoard {
            background-color: rgb(46, 44, 44);
            padding: 10px;
            border-radius: 8px;
            display: flex;
            justify-content: space-between;
            flex-direction: column;
            margin: auto;
            width: 30%;
            height: 500px;
        }

        .row {
            display: flex;
            justify-content: space-between;
            margin: 10px 10px 10px 10px;
        }

        .boardBox {
            width: 90px;
            height: 90px;
            border-radius: 10px;
            border: none;
            margin: 10px 10px 10px 10px;
        }

        .findMatch {
            background-color: rgb(46, 44, 44);
            padding: 10px;
            border-radius: 8px;
            display: flex;
            justify-content: space-between;
            flex-direction: column;
            margin: auto;
            width: 30%;
            height: 500px;
            padding: 50px;
        }

        .findMatch>button {
            display: inline-block;
            padding: 10px;
            background-color: #ff9900;
            color: #fff;
            text-decoration: none;
            border-radius: 4px;
            width: 200px;
            font-weight: bold;
            border-style: none;
            margin: auto;
        }

        @media only screen and (max-width: 768px) {
            .container {
                margin: 40px auto;
                background-color: rgb(46, 44, 44);
                padding: 10px;
                border-radius: 8px;
                display: flex;
                flex-direction: column;
                justify-content: space-between;
                width: 90%;
                height: 500%;
            }

            .scoreBoard {
                padding: 10px;
                color: white;
                display: flex;
                flex-direction: column;
                justify-content: space-between;
            }

            .gameBoard {
                padding: 10px;
                margin: auto;
            }
        }
    </style>
</head>

<body>

    <div class="container" id="container">
        <div class="findMatch">
            <h1>Tic Tac Toe</h1>
            <button onclick="playWithBot()">Play with bot</button>
            <button onclick="findMatch()">Find match</button>
            <button onclick="playWithFriends()">Play with friends</button>
        </div>
    </div>
    <script>
        let box1;
        function playWithBot() {
            const scriptToRemove = document.getElementById("tictactoebot-script");
            if (scriptToRemove) {
                scriptToRemove.remove();
            }
            document.getElementById("container").innerHTML = `
            <div class="gameBoard">
                <h1>Tic Tac Toe</h1>
                <div class="row">
                    <button id="box1-0" class="boardBox"></button>
                    <button id="box1-1" class="boardBox"></button>
                    <button id="box1-2" class="boardBox"></button>
                </div>
                <div class="row">
                    <button id="box1-3" class="boardBox"></button>
                    <button id="box1-4" class="boardBox"></button>
                    <button id="box1-5" class="boardBox"></button>
                </div>
                <div class="row">
                    <button id="box1-6" class="boardBox"></button>
                    <button id="box1-7" class="boardBox"></button>
                    <button id="box1-8" class="boardBox"></button>
                </div>
            </div>`
            const script = document.createElement("script");
            script.src = "../frontend/tictactoebot.js";
            script.id = "tictactoebot-script";
            document.body.appendChild(script);
        }
    </script>
    <script src="/socket.io/socket.io.js"></script>
    <script>
        function playWithFriends() {
            const scriptToRemove1 = document.getElementById("tictactoebot-script1");
            if (scriptToRemove1) {
                scriptToRemove1.remove();
            }
            
            document.getElementById("container").innerHTML = `
            <div class="friends">
                <h1>Friends</h1>
                <ul>
                    <li></li>
                </ul>
                
            </div>`
            const script = document.createElement("script");
            script.src = "../frontend/tictactoeonline.js";
            script.id = "tictactoebot-script1";
            document.body.appendChild(script);
        }
    </script>
</body>

</html>