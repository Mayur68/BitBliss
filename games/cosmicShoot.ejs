<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- <link rel="stylesheet" href="/frontend/global.css"> -->
    <title>Cosmic shoot</title>
    <style>
        body {
            margin: 0;
            overflow: hidden;
            background-color: #1e1e1e;
        }

        .menu {
            margin: 100px auto;
            width: auto;
            height: 400px;
            display: flex;
            justify-content: space-between;
            flex-direction: column;
        }

        h1 {
            color: white;
            text-align: center;
        }

        button {
            display: inline-block;
            padding: 10px;
            background-color: #ff9900;
            color: #fff;
            text-decoration: none;
            border-radius: 4px;
            width: 200px;
            font-weight: bold;
            border-style: none;
            margin: auto;
        }

        .game-container {
            position: relative;
            width: 100%;
            height: 100vh;
        }

        .spacecraft {
            position: absolute;
            width: 60px;
            height: 50px;
            /* background-color: #00f; */
            overflow: hidden;
        }

        .spacecraft img {
            position: absolute;
            width: 60px;
            height: 50px;
            transform-origin: center center;
            transition: transform 0.2s;
        }

        .score-board {
            display: flex;
            justify-content: space-between;
            height: 400px;
            flex-direction: column;
        }

        .asteroid {
            width: 60px;
            height: 50px;
            position: absolute;
        }

        .asteroid img {
            width: 100%;
        }


        .bullet {
            position: absolute;
            width: 5px;
            height: 10px;
            background-color: #fff;
        }
    </style>
</head>

<body>
    <div id="game-container">
        <div class="menu">
            <h1>Cosmic shoot</h1>
            <button onclick="start()">Start</button>
            <button onclick="score()">Score</button>
            <button onclick="exit()">Exit</button>
        </div>
        <div class="asteroid">
            <!-- <img src="../assets/asteroid1.png" alt="Asteroid Image"> -->
        </div>
</body>




<script>
    function exit() {
        window.location = "/";
    }
    function back() {
        document.getElementById("game-container").innerHTML = `<div class="menu">
            <h1>Cosmic shoot</h1>
            <button onclick="start()">Start</button>
            <button onclick="score()">Score</button>
            <button onclick="exit()">Exit</button>
        </div>
        <div class="asteroid">
            <!-- <img src="../assets/asteroid1.png" alt="Asteroid Image"> -->
        </div>`;
    }
    function score() {
        document.getElementById("game-container").innerHTML = `<h1>score</h1>
    <button onclick="back()">back</button>`;
    }
    function start() {
        let spacecraft;
        let spacecraftX;
        let spacecraftY;
        let rotation;
        const asteroids = [];
        const bullets = [];
        let scores;
        const scriptToRemove = document.getElementById("cosmicshoot-script");
        if (scriptToRemove) {
            scriptToRemove.remove();
        }
        document.getElementById("game-container").innerHTML = `<div class="spacecraft">
            <img src="../assets/spaceship1.png" id="spaceship-img">
        </div>
        <div class="asteroid">
            <!-- <img src="../assets/asteroid1.png" alt="Asteroid Image"> -->
        </div>
    </div>
    <div class="bullets"></div>`;
        const script = document.createElement("script");
        script.src = "../frontend/cosmicshoot.js";
        script.id = "cosmicshoot-script";
        document.body.appendChild(script);
    }
    function createAsteroid() {
        const asteroid = document.createElement('div');
        asteroid.className = 'asteroid';

        const asteroidImage = document.createElement('img');
        asteroidImage.src = '../assets/asteroid1.png';
        asteroidImage.alt = 'Asteroid Image';

        asteroid.appendChild(asteroidImage);
        document.body.appendChild(asteroid);

        const randomX = Math.random() * window.innerWidth;
        const randomY = Math.random() * window.innerHeight;
        asteroid.style.left = randomX + 'px';
        asteroid.style.top = randomY + 'px';
        const speed = Math.random() * 4 + 2;
        const angle = Math.random() * 360;
        const radians = angle * (Math.PI / 180);
        const xVelocity = Math.cos(radians) * speed;
        const yVelocity = Math.sin(radians) * speed;

        function updateAsteroidPosition() {
            const currentX = parseFloat(asteroid.style.left);
            const currentY = parseFloat(asteroid.style.top);

            asteroid.style.left = (currentX + xVelocity) + 'px';
            asteroid.style.top = (currentY + yVelocity) + 'px';
        }
        const asteroidInterval = setInterval(updateAsteroidPosition, 50);

        setTimeout(() => {
            clearInterval(asteroidInterval);
            asteroid.remove();
        }, 10000);

    }
    setInterval(createAsteroid, 2000);
</script>

</html>